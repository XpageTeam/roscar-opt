.tabs
	display: flex

	&__tab
		user-select: none
		padding: 13px 20px
		text-transform: uppercase
		font-size: em(12)
		transition: background-color .3s ease
		color: #fff !important
		border-radius: 25px

		&:not(:last-child)
			margin-right: 10px

		&:not(.active)
			cursor: pointer
			background-color: var(--main-color)

		&.active, &:hover
			background-color: #4a7ffe