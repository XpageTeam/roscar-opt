.head
	padding: 1.25rem 0 1.375rem
	background: #fff
	box-shadow: -1px 3px 9px 0 rgba(0,0,0,.08)
	margin: 0 0 1.375rem
	flex: none
	
	&__wrap
		display: flex
		align-items: center

	&__logo
		max-width: 200px
		margin-right: 40px

	&__menu
		flex: 1 1 auto

	&__contacts
		margin-right: 15px

.logo
	display: block

	img
		display: inherit

.h-menu
	display: flex
	align-items: center
	margin: 0

	li

		&:not(:last-child)
			margin-right: 12px

.h-contacts
	margin: 0